{{#partial "sidebarName" }}
    Records
{{/partial}}

{{#partial "sidebarLists" }}
    {{#each module.records}}
        <li {{#equals record.name name}}class="active"{{/equals}}>
            <a href="{{name}}.html" onclick="menuLinkClick()">{{name}}</a>
        </li>
    {{/each}}
{{/partial}}

{{#partial "titleType" }}
    Record
{{/partial}}
{{#partial "title" }}
    <span class="records {{#if record.isDeprecated}}strike{{/if}}">{{ record.name }}</span>
{{/partial}}

{{#partial "content" }}
    <p>
        {{#if record.isDeprecated}}
        <span class="stab">Deprecated</span>
        {{/if}}
        {{{ record.description }}}
    </p>
    <div class="constants">
        {{#if record.fields}}
        {{#record}}
        <h2>Fields</h2>
        {{> fields }}
        {{/record}}
        {{/if}}
    </div>
{{/partial}}

{{> layout}}
